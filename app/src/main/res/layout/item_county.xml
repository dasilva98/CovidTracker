<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    android:id="@+id/countyCardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:text="VILA REAL DE SANTO ANTÃ“NIO"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/county"
            android:layout_marginHorizontal="10dp"
            android:text="FARO"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/incidenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/incidence"
            android:layout_below="@id/district"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/incidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/incidenceText"
            android:layout_below="@id/district"
            android:layout_marginTop="6dp"
            android:text="120"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/incidenceLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/riskLevel"
            android:layout_below="@id/incidenceText"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/incidenceLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/incidenceLevelText"
            android:layout_below="@id/incidenceText"
            android:text="Moderate"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/incidenceLevelText"
            android:layout_below="@id/incidenceText"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/confirmed14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/incidenceLevelText"
            android:layout_below="@id/incidenceText"
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="08-07-2021"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>