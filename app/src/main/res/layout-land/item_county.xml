<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:id="@+id/countyCardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="VILA REAL DE SANTO ANTÃ“NIO"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="FARO"
            android:layout_toEndOf="@id/county"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/incidenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/incidence"
            android:layout_below="@id/district"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/incidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="120"
            android:layout_below="@id/district"
            android:layout_toEndOf="@+id/incidenceText"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/incidenceLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/riskLevel"
            android:layout_below="@id/incidence"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/incidenceLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="Elevado"
            android:layout_below="@id/incidence"
            android:layout_toEndOf="@+id/incidenceLevelText"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/confirmed14Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/cases14days"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/district"
            android:layout_toStartOf="@+id/confirmed14"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/confirmed14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="100"
            android:layout_below="@id/district"
            android:layout_marginTop="6dp"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/populationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@string/population"
            android:layout_below="@id/confirmed14"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/population"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="100"
            android:layout_below="@id/confirmed14"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="07/07/2021"
                android:textSize="19sp" />

        </LinearLayout>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>